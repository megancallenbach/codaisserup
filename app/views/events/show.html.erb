<div class="panel panel-primary">
  <div class="panel-heading"><%= @event.name %></div>

  <div class="panel-body">
    <!-- Booking Form -->
    <% if current_user != @event.user %>
      <div class="panel panel-primary">
        <div class="panel-heading">Register for this event</div>

        <div class="panel-body">
          <%= render 'registrations/form' %>
        </div>
      </div>
    <% end %>




    <!-- About -->
    <h4>About</h4>
    <p>Location <%= @event.location %></p>
    <p>Host: <%= @event.user.email %></p>
    <p>Description: <%= @event.description %></p>
    <!-- Main Info -->
    <h4>General Information</h4>

    <p>Starting Time: <%= @event.starts_at %></p>
    <p>Ending Time: <%= @event.ends_at %></p>
    <p>Price: <%= @event.price == 0 ? "Free" : @event.price %> â‚¬</p>
    <p>Capacity: <%= @event.capacity %> </p>


    <!-- Additional Info-->
    <h4>Additional Information</h4>
    <ul>
      <li><%= @event.includes_food ? "Snacks will be available" : "Please bring your own food" %></li>
      <li><%= @event.includes_drinks ? "Drinks will be served!" : "Please bring your own drinks" %></li>
    </ul>

    <h4>Categories</h4>
    <% @event.categories.each do |category| %>
    <span class="label label-success"><%= category.name %></span>
    <% end %>

    <h4>Photos</h4>
    <% @event.photos.each do |photo| %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <%= image_tag photo.image.thumbnail %>
      </div>
    </div>
    <% end %>
  </div>

</div>

<%= link_to "Back", events_path, class: "btn btn-default" %>
